                    <!-- Begin gallery meta -->
                    <ul class="gallery-meta">
                        <li>
                            <!-- Begin favorite button -->
                            <div class="favorite-btn">
                                <div class="fav-inner">
                                    <div class="icon-heart">
                                        <span class="icon-heart-empty"></span>
                                        <span class="icon-heart-filled"></span>
                                    </div>
                                </div>
                                <div class="fav-count">56</div>
                            </div>
                            <!-- End favorite button -->
                        </li>
                    </ul>
